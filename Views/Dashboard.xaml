<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aQuelalT3.Views.Dashboard"
             Title="Dashboard">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        <Label 
            Text="Ventana de registro"
            FontSize="18"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Entry 
                Style="{StaticResource estiloEntry}"
               x:Name="txtUsuario"
               Placeholder="Ingresar usuario"
               />
        <Entry x:Name="txtContrasenia"
               Placeholder="Ingresar contrasenia"
               />
        <Button x:Name="btnGurdar" Text="Guardar" Clicked="btnGurdar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>